            <TextView
                android:id="@+id/total"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:text="Rs: 0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/memory"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:contentDescription="@string/app_name"
                android:visibility="invisible"
                android:src="@drawable/history_enter" />
            <ImageView
                android:id="@+id/leftRotate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:src="@drawable/left_rotate" />
            <ImageView
                android:id="@+id/clear"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:visibility="invisible"
                android:contentDescription="@string/app_name"
                android:src="@drawable/clear" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1">
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"

                android:foregroundGravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/currency10000"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_10000" />
                    <ImageView
                        android:id="@+id/currency5000"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_5000_folded" />
                    <ImageView
                        android:id="@+id/currency1000"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_1000_folded" />

                    <ImageView
                        android:id="@+id/currency500"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_500_folded" />
                    <ImageView
                        android:id="@+id/currency100"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_100_folded" />
                    <ImageView
                        android:id="@+id/currency50"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_50_folded" />

                    <ImageView
                        android:id="@+id/currency20"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_20_folded" />

                    <ImageView
                        android:id="@+id/currency10"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_10_folded" />
                    <ImageView
                        android:id="@+id/currency5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_5" />

                    <ImageView
                        android:id="@+id/currency2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_2" />
                    <ImageView
                        android:id="@+id/currency1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/currency_pkr_1" />

                    <ImageView
                        android:id="@+id/cashNumToggle"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cash_num_toggle" />


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


