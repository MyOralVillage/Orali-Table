<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation = "horizontal"
    tools:context=".TutorialActivity"
    android:background="@drawable/metallic_surface">


   <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/intro_video"
        android:layout_width="190dp"
        android:layout_height="134dp"
        android:background="@drawable/intro_video_icon">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/advanced_video"
        android:layout_width="190dp"
        android:layout_height="134dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/advanced_video_icon">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/numeric_video"
        android:layout_marginLeft="5dp"
        android:layout_width="190dp"
        android:layout_height="134dp"
        android:background="@drawable/numeric_video_icon">
    </androidx.appcompat.widget.AppCompatButton>


    <ImageView
        android:id="@+id/goto_main"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/forward_arrow" />

    <ImageView
        android:id="@+id/finger"
        android:layout_width="83dp"
        android:layout_height="239dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pointing_hand3" />

</LinearLayout>
